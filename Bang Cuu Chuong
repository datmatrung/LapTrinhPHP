<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Bảng Cửu Chương</title>
</head>
<body>
<form action="#" method="get">
    <lable for="cuuchuong">Nhập Bảng Cửu Chương</lable> <br/>
    <input name="cuuchuong" type="number" min="2" max="10"><hr/>
    <input type="submit" value="in bang cuu chuong">
</form>

<!--in bang cuu chuong-->
<?php
    if(isset($_GET['cuuchuong'])):
        for ($i=1; $i<=10; $i++):
            echo $i * $_GET['cuuchuong'] . '<br/>';
        endfor;
    endif;
?>
<!--in bang cuu chuong them giao dien cach 1-->
<?php
    if(isset($_GET['cuuchuong'])):
        echo '<table border=1 cellspacing="0">';
        for ($i=1; $i<=10; $i++):
            echo '<tr><td>' ;
            echo $_GET['cuuchuong'] . ' * ' . $i . ' = ' . $_GET['cuuchuong']*$i ;
            echo '</tr></td>';
        endfor;
        echo '</table>';
    endif;
?>
<!--in bang cuu chuong them giao dien cach 2-->
<?php if(isset($_GET['cuuchuong'])): ?>
    <table border="1" cellspacing="0">
        <?php for ($i=1; $i<=10; $i++): ?>
            <tr>
                <td>
                    <?php echo $_GET['cuuchuong'] . ' * ' . $i . ' = ' . $_GET['cuuchuong']*$i ; ?>
                </td>
            </tr>
        <?php endfor; ?>
    </table>
<?php endif; ?>

</body>
