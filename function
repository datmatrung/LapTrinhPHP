    <meta charset="UTF-8">
    <title>Khai báo mảng</title>
</head>
<body>
<?php
    $a = 100; //biến toàn cục global variable
    $b = 50;
    // Cú pháp tạo hàm
    // Hàm không trả về giá trị
    function cong2so()
    {
        $num1 = 10; //local variable
        $num2 = 5;
        echo 'cộng 2 số = ' . ($num1 + $num2) . '<br/>';
    }

    // Gọi hàm chạy:
//    cong2so();

    // Hàm trả về giá trị
    function tru2so()
    {
        $num1 = 10;
        $num2 = 5;
        return $num1 - $num2;
    }
//    echo tru2so();

    function nhan2so()
    {
        global $a, $b; //Báo xài biến toàn cục
        echo $a * $b;
    }
//    nhan2so()
    
    function chia2so()
    {
        global $a, $b; 
        $a = 50;       //Sửa biến toàn cục (ko nên xài)
        echo $a / $b;
    }
    chia2so();
    echo $a; // Biến toàn cục bị thay đổi
    
    //Không được sử dụng trực tiếp biến toàn cục
    //Chỉ truyền tham số vào hàm
    //Tức là truyền bản sao của biến toàn cục vào hàm
    function suDungThamSo($a, $b)
    {   //$a, $b là biến cục bộ của hàm suDungThamSo
        //$a của hàm = $a toàn cục
        //$b = $b
        $a = 3000; // Biến toàn cục ko bị thay đổi
        echo $a + $b;
    }
    suDungThamSo($a, $b);
    echo $a;
    
    //Hàm ko cần truyền tham số:
    function koCanTruyenThamSoMacDinh()
    {
        foreach (func_get_args() as $value): //func_get_args lấy các giá trị truyền vào hàm
            echo $value . '<br/>';
        endforeach;
    }
    koCanTruyenThamSoMacDinh(1,2,3,4,5,6);
    koCanTruyenThamSoMacDinh(7,8,9);
?>
</body>
</html>
