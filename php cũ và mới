// Cấu trúc If Else
<?php  
    $a = 10;
    if ($a===10):              
        echo "a bang 10";
    elseif ($a > 10):
        echo "a lon hon 10";
    elseif ($a < 10):
        echo "a nho hon 10";
    endif;

// Khai báo mảng
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Khai báo mảng</title>
</head>
<body>
    <?php
        $arr = ["A", "B", "C"];
        echo $arr[0] . '<br/>';
        echo $arr[1] . '<br/>';
        echo $arr[2] . '<br/>';
        print_r($arr); // Xem cấu trúc mảng        
    ?>
    
// Duyệt mảng:
    $length = count($arr);
    for ($i=0; $i<$length; $i++):
        echo $arr[$i] . '<br/>';
    endfor;
    
// Duyệt mảng cách mới:
    foreach ($arr as $item):
        echo $item . '<br/>';
    endforeach;
    
// Thêm phần tử vào cuối mảng:
    $arr[] = "D";
    $arr[] = "E";
    print_r($arr);
    
    $arr1 = ["nguyen","truong","ngoc"];
    echo $arr1[0];

//  Mảng key => value
    $arr2 = ["a"=>"nguyen","b"=>"truong","c"=>"ngoc"];
    echo $arr2["a"];

    foreach ($arr2 as $key => $value):
        echo $key . '=>' . $value .'<br/>';
    endforeach;
</body>
</html>
