trang DangKy.php

<?php
    session_start();
    if($_SERVER['REQUEST_METHOD']==='POST'):
        $date = $_POST['date'];
        $email = trim($_POST['email']);
        $desc = trim($_POST['desc']);
        if(!empty($email) && !empty($desc)):
            $_SESSION['date'] = $date;
            $arr = [$email, $desc];
            $_SESSION['arr'] = $arr;
            header('Location: HienThiThongTin.php');
        endif;
    endif;
?>
<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Dang Ky</title>
</head>
<body>
      <form method="post" action="DangKy.php">
          <label for="date">date</label><br/>
          <input type="text" name="date" placeholder="dd/MM/yyyy" pattern="(31[\/.](0[13578]|1[02])[\/.](18|19|20)[0-9]{2})|((29|30)[\/.](01|0[3-9]|1[1-2])[\/.](18|19|20)[0-9]{2})|((0[1-9]|1[0-9]|2[0-8])[\/.](0[1-9]|1[0-2])[\/.](18|19|20)[0-9]{2})|(29[\/.](02)[\/.](((18|19|20)(04|08|[2468][048]|[13579][26]))|2000))" title="please enter date by dd/MM/yyyy" ><br/>

          <label for="email">email</label><br/>
          <input type="email" name="email" placeholder="email@domain.com"><br/>

          <label for="desc">desc</label><br/>
          <textarea name="desc" rows="8" cols="40"></textarea><br/>
          <hr/>
          <input type="submit" value="submit">
      </form>

</body>
</html>



trang HienThiThongTin
<?php
    session_start();
?>
<!doctype html>
<html >
<head>
    <meta charset="UTF-8">
    <title>hien thi thong tin</title>
</head>
<body>
    <?php
        if(isset($_SESSION['date'])):
             $convert = str_replace("/","-", $_SESSION['date']);
            echo date('m-d-Y',strtotime($convert)) . '<br/>';
        endif;

        if(isset($_SESSION['arr'])):
            foreach ($_SESSION['arr'] as $key => $value):
                echo $value . '<br/>';
            endforeach;
        endif;

    ?>
</body>
</html>
